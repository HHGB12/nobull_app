<header class="box-header">
  <h2 class="h4 title">Welcome Back!</h2>
  <h3 class="h6 subtitle">You're just moments away from getting back to working on your new website! ðŸ™Œ</h3>
</header>

<div class="box-body">
  <%=  form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: 'form-horizontal' }) do |f| %>
    <%= devise_error_messages! %>

    <div class="form-group">
      <div class="col-6 col-sm-12">
        <%= f.label :email, 'Your Email Address:', class: 'form-label' %> 
      </div>
      <div class="col-6 col-sm-12">
          <%= f.email_field  :email, autofocus: true, autocomplete: "email", class: 'form-input' %>
      </div>
    </div>

    <div class="form-group">
      <div class="col-6 col-sm-12">
        <%= f.label :password, 'Your Password:', class: 'form-label' %>
      </div>
      <div class="col-6 col-sm-12">
          <%= f.password_field  :password, autocomplete: "current-password", class: 'form-input' %>
      </div>
    </div>

    <% if devise_mapping.rememberable? -%>
      <div class="form-group">
        <div class="col-6 col-sm-12">
          <%= f.label :remember_me, 'Remember your account?', class: 'form-label' %>
        </div>
        <div class="col-6 col-sm-12">
            <%= f.check_box  :remember_me, class: 'form-input' %>
        </div>
      </div>
    <% end -%>

 
    <div class="actions">
      <%= f.submit "Log In", class: 'btn btn-primary is-centered text-center my-8' %>
    </div>
  <% end %>
</div>

<footer class="box-footer column text-center col-12 ">
  <%= render "devise/shared/links" %>
</footer>