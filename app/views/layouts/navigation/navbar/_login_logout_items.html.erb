<% if user_signed_in? %>
  <%= link_to destroy_user_session_path, method: :delete, class: 'btn btn-link' do %>        
    <span class="icon">
      <i class="fal fa-sign-out-alt"></i>
    </span>
    <span>Logout</span>
  <% end %>
<% else %>
  <%= link_to new_user_session_path, class: 'btn btn-link' do %>  
    <span class="icon">
      <i class="fal fa-sign-in-alt"></i>
    </span>
    <span>Login</span>
  <% end %>
<% end %>

