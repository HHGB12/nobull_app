<header class="box-header column col-12">
  <div class="box-title h5">Preview Uploaded Images</div>
  <p class="subtitle">You can see all the images you've uploaded here. If you don't like some, go ahead and change them out! ğŸ¤—</p>
</header>
<section class="box-body column col-12">
  <div class="columns no-margin-offset">       
    <%= render 'show_content', upload: @upload %>
  </div>
</section>
<footer class="box-footer column col-12">
  <% unless current_user.is_submitted? %>
    <div class="columns">
      <%= link_to 'Upload New/More Images', edit_upload_path(@upload), class: 'btn column col-5 col-sm-10 mb-2 col-mx-auto' %>
      <%= link_to 'Next', edit_extra_page_path, class: 'btn btn-primary column col-5 col-sm-10 mb-2 col-mx-auto' %>
    </div>
  <% else %>
    <button class="btn is-centered mb-4" disabled="" tabindex="-1">Upload New/More Images</button> 
    <p>
       Your Site has already been submitted. If you see a problem with your submitted data, <%= link_to 'get in touch', pages_contact_path %>
    </p>
  <% end %>
</footer>

