<div class="column col-12">
  <%= form_with(model: upload, local: true) do |form| %>
    <% if upload.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(upload.errors.count, "error") %> prohibited  your uploaded images from being saved:</h2>

        <ul>
        <% upload.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <div class="uploads-group">
      <div class="form-group">
        <%= form.label :logo_images, class: 'form-label'  do %>
          <strong>Your Business Logo</strong>
          <div class="popover popover-bottom">
            <i class="icon icon-message"></i>
            <div class="popover-container">
              <div class="card">
                <div class="card-body">
                  Images! Images! Upload your Images Here! üôã‚Äç‚ôÇÔ∏èüñº Just click on the box below and share any images you have of your business logo. Remember, holding the "ctrl" button on your computer lets you select more than one image!üëå If you miss some, no worries, send them to me in an email later. 
                </div>
              </div>
            </div>
          </div>
        <% end %>

        <span class="is-subtle">Drag your images into the box below or click somewhere in the box.</span>
        <%= form.file_field :logo_images, multiple: true, direct_upload: true, class: 'form-input py-10', accept: 'image/png, image/jpeg, image/gif, image/tiff', size_limit: 5_000_000 %>
      </div>
      <div class="form-group">
        <%= form.label :team_images, class: 'form-label'  do %>
          <strong>Images of your Team</strong>
          <div class="popover popover-bottom">
            <i class="icon icon-message"></i>
            <div class="popover-container">
              <div class="card">
                <div class="card-body">
                  Use this section to share a picture headshot of everyone you work with. It adds a lot of trust to your site!
                </div>
              </div>
            </div>
          </div>
        <% end %>

        <span class="is-subtle">Drag your images into the box below or click somewhere in the box.</span>
        <%= form.file_field :team_images, multiple: true, direct_upload: true, class: 'form-input py-10', accept: 'image/png, image/jpeg, image/gif, image/tiff', size_limit: 5_000_000 %>
      </div>
      <div class="form-group">
        <%= form.label :workspace_images, class: 'form-label'  do %>
          <strong>Images of your Workspace</strong>
          <div class="popover popover-bottom">
            <i class="icon icon-message"></i>
            <div class="popover-container">
              <div class="card">
                <div class="card-body">
                  This is where you show off where you work! Any photos you have of your business or even your truck/car if you work out of it would be helpfull.
                </div>
              </div>
            </div>
          </div>
        <% end %>

        <span class="is-subtle">Drag your images into the box below or click somewhere in the box.</span>
        <%= form.file_field :workspace_images, multiple: true, direct_upload: true, class: 'form-input py-10', accept: 'image/png, image/jpeg, image/gif, image/tiff', size_limit: 5_000_000 %>
      </div>
      <div class="form-group">
        <%= form.label :other_images, class: 'form-label'  do %>
          <strong>Other Photos</strong>
          <div class="popover popover-bottom">
            <i class="icon icon-message"></i>
            <div class="popover-container">
              <div class="card">
                <div class="card-body">
                  Have a few photos you want featured but they don't fit in the above categories? This is the place for them. üò∫
                </div>
              </div>
            </div>
          </div>
        <% end %>

        <span class="is-subtle">Drag your images into the box below or click somewhere in the box.</span>
        <%= form.file_field :other_images, multiple: true, direct_upload: true, class: 'form-input py-10', accept: 'image/png, image/jpeg, image/jph/ image/gif, image/tiff', size_limit: 5_000_000 %>
      </div>
    </div> 
    <div class="divider my-10"></div>


    <div class="form-group columns">
      <div class="col-5 col-sm-11">
        <p class="title">Extra Pages Complete Or Don't need any..</p> 
      </div>
      <div class="col-1">
        <div class="popover popover-down">
          <i class="icon icon-message"></i>
          <div class="popover-container">
            <div class="card">
              <div class="card-body">
                Hit this switch after you've added any extra pages you need. Don't need any? Hit it to mark this as complete.
              </div>
            </div>
          </div>
        </div>
      </div>
      <div class="col-6 col-sm-12 text-centered">
        <label class="form-switch input-lg">
          <%= form.check_box :is_complete, class: 'input-lg' %>
          <i class="form-icon input-lg"></i>
        </label>
      </div>
    </div>

    <div class="form-group actions col-12">
      <%= form.submit 'Save All Extra Pages', class: 'btn btn-primary form-inline input-group-btn is-full-width' %>
    </div>
  <% end %>
</div>



