
<section id="hero">
    <!--The div element for the map -->
  <div id="map"></div>
  <script>
    // Initialize and add the map
    function initMap() {
      // The location of Uluru
      var warwick = {lat: 52.282223, lng: -1.585105};
      var sa = {lat: 50.707845, lng: -119.287819};
      var nfld = {lat: 48.979934, lng: -53.991318};
      var yyc = {lat: 51.053937, lng: -114.071009};
      var bcn = {lat: 41.387174, lng: 2.179912};
      var ire = {lat: 54.994124, lng: -7.308660};
      var ams = {lat: 52.365155, lng: 4.901410};
      var tor = {lat: 43.6532, lng: -79.3832};
      var mtl = {lat: 45.5017, lng: -73.5673};
      var stl = {lat: 13.9094, lng: -60.9789};
      var sat = {lat: 47.6062, lng: -122.3321};

      // The map, centered at warwick
      var marker = 'http://maps.google.com/mapfiles/ms/icons/purple-dot.png'
      var map = new google.maps.Map(
          document.getElementById('map'), {
            zoom: 3, 
            center: nfld,
            disableDefaultUI: true,
            zoomControl: true,
            mapTypeControl: false,
            scaleControl: true,
            streetViewControl: false,
            rotateControl: false,
            fullscreenControl: false
            });
      // The marker, positioned at Warwick
      var wmarker = new google.maps.Marker({position: warwick, map: map, icon: marker});
      var samarker = new google.maps.Marker({position: sa, map: map, icon: marker})
      var yycmarker = new google.maps.Marker({position: yyc, map: map, icon: marker})
      var bcnmarker = new google.maps.Marker({position: bcn, map: map, icon: marker})
      var iremarker = new google.maps.Marker({position: ire, map: map, icon: marker})
      var amsmarker = new google.maps.Marker({position: ams, map: map, icon: marker})
      var tormarker = new google.maps.Marker({position: tor, map: map, icon: marker})
      var mtlmarker = new google.maps.Marker({position: mtl, map: map, icon: marker})
      var stlmarker = new google.maps.Marker({position: stl, map: map, icon: marker})
      var satmarker = new google.maps.Marker({position: sat, map: map, icon: marker})
    }
  </script>
  <script async defer
  src="https://maps.googleapis.com/maps/api/js?key=AIzaSyAGg4XH44nu8NpfeiVv-VfsxftDeAp0Ll0&callback=initMap">
  </script>
